<%- include('../partials/header', {title: 'Watchlists Page'}); -%>

<div class="flex w-screen h-screen">
  <%- include('../partials/components/sidenav', {active: 'Watchlists'}); -%>
  <section class="w-full h-screen p-4 mr-4">
    <div
      class="bg-white p-4 drop-shadow-xl border-2 border-gray-300 rounded-lg min-h-screen max-h-auto w-full"
    >
      <div
        class="flex justify-between bg-gray-100 m-2 p-6 items-center rounded-xl border-2 border-gray-200"
      >
        <div>
          <h1 class="text-4xl font-bold">
            <%= username[0].toUpperCase() + username.slice(1) %>'s Watchlists
          </h1>
        </div>
        <div>
          <a href="/watchlists/new"
            ><button
              class="w-full bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded cursor-pointer"
              id="newWatchlist"
            >
              Create New Watchlist
            </button></a
          >
        </div>
      </div>
      <%- include('../partials/components/displayMessage') -%> <%
      if(watchlists.length) { %>
      <div class="gap-x-8 flex flex-wrap items-start h-auto">
        <% watchlists.forEach(watchlist => { %> <%-
        include('../partials/components/watchlistCard', {watchlist: watchlist})
        -%> <% }) %>
      </div>
      <% } else { %>
      <div class="flex items-center justify-center mt-20">
        <h1 class="text-6xl">No Watchlists found!</h1>
      </div>

      <% } %>
    </div>
  </section>
</div>
