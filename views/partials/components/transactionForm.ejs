  <div class="w-full max-w-lg">
    <form
      action="<%= action %>"
      method="<%= method %>"
      class="bg-gray-300 shadow-md rounded px-8 pt-6 pb-8 mb-4"
    >
      <div>
        <h1 class="text-4xl text-center mb-8 text-slate-600 font-bold">
          Update Transaction
        </h1>
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="name">
          Name
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          name="name"
          type="text"
          value="<%= type === 'edit' ? transaction.name : ''  %>"
          placeholder="Company Name"
        />
      </div>
      <div class="mb-4">
        <label
          class="block text-gray-700 text-sm font-bold mb-2"
          for="tickerSymbol"
        >
          Symbol
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          name="tickerSymbol"
          type="text"
          value="<%= type === 'edit' ? transaction.tickerSymbol : ''  %>"
          placeholder="Ticker Symbol"
        />
      </div>
      <div class="mb-4">
        <label
          class="block text-gray-700 text-sm font-bold mb-2"
          for="stockPrice"
        >
          Price
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 hover:border-gray-300 leading-tight focus:outline-none focus:shadow-outline"
          type="number"
          name="stockPrice"
          value="<%= type === 'edit' ? transaction.stockPrice : ''  %>"
          placeholder="Enter Stock Price"
        />
      </div>
      <div class="mb-4">
        <label
          class="block text-gray-700 text-sm font-bold mb-2"
          for="username"
        >
          Quantity
        </label>
        <input
          class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          type="number"
          name="quantity"
          value="<%= type === 'edit' ? transaction.quantity : ''  %>"
          placeholder="Enter Quantity"
        />
      </div>
      <div class="mb-4">
        <label class="block text-gray-700 text-sm font-bold mb-2" for="type">
          Type
        </label>
        <select
          class="block appearance-none w-full bg-white border border-gray-200 hover:border-gray-300 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline"
          name="type"
          value="<%= type === 'edit' ? transaction.type : 'Buy'  %>"
        >
          <option value="Buy">Buy</option>
          <option value="Sell">Sell</option>
        </select>
        <div
          class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-700"
        >
          <svg
            class="fill-current h-4 w-4"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 20 20"
          >
            <path
              d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
            />
          </svg>
        </div>
      </div>

      <div class="mb-4">
        <label
          class="block text-gray-700 text-sm font-bold mb-2"
          for="username"
        >
          Date
        </label>
        <div class="relative">
          <div
            class="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none"
          >
            <svg
              class="w-5 h-5 text-gray-500 dark:text-gray-400"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                fill-rule="evenodd"
                d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z"
                clip-rule="evenodd"
              ></path>
            </svg>
          </div>
          <input
            datepicker
            type="text"
            class="border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full pl-10 p-2.5 dark:border-gray-300 dark:placeholder-gray-400 dark:text-slate-500 dark:focus:ring-blue-500 dark:focus:border-blue-500"
            placeholder="Select date"
            name="date"
            value="<%= type === 'edit' ? transaction.date.toLocaleDateString() : ''  %>"
          />
        </div>
      </div>
      <div class="flex md:items-center mt-8 gap-x-4">
        <div>
          <input
            class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded"
            type="submit"
          />
        </div>
        <div>
          <a href="/transactions"
            ><button
              class="bg-red-500 hover:bg-red-400 text-white font-bold py-2 px-4 border-b-4 border-red-700 hover:border-red-500 rounded"
              type="submit"
            >
              Cancel
            </button></a
          >
        </div>
      </div>
    </form>
  </div>
</div>
