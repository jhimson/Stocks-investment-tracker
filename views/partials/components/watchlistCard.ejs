<div class="rounded shadow-xl border-gray-100 border-2 flex p-4">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2 flex justify-between">
      <div><%= watchlist.name %></div>
      <div>
        <a href="/watchlists/edit/<%= watchlist.id %>">
          <button class="btn btn-default text-blue-500">
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
              ></path>
            </svg></button
        ></a>
        <form
          action="/watchlists/<%= watchlist.id %>?_method=DELETE"
          method="POST"
          class="inline-block"
        >
          <button type="submit" class="btn btn-default text-red-500">
            <svg
              class="w-6 h-6"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"
              ></path>
            </svg>
          </button>
        </form>
      </div>
    </div>
    <div class="bg-white rounded-lg shadow-lg">
      <ul class="divide-y-8 text-gray-500">
        <% if(watchlist.stocks.length > 0) { %> <%
        watchlist.stocks.forEach(stock => { %>
        <li
          class="p-3 bg-gray-100 hover:bg-blue-600 hover:text-blue-200 w-96 cursor-pointer flex justify-between items-center"
        >
          <div>
            <img
              class="w-12 h-12 rounded-full border-2 border-white object-contain"
              src="<%= stock.logo %>"
              alt=""
            />
          </div>
          <div><%= stock.symbol %></div>
          <div class="text-green-500">$<%= stock.price %></div>
          <div>
            <a href="/watchlists/remove/<%= watchlist._id %>/<%= stock._id %>">
              <svg
                class="w-4 h-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M6 18L18 6M6 6l12 12"
                ></path></svg
            ></a>
          </div>
        </li>
        <% }) %> <% } else { %>
        <h1
          class="p-3 hover:bg-blue-600 hover:text-blue-200 w-96 cursor-pointer"
        >
          CURRENTLY NO STOCKS IN THE WATCHLIST
        </h1>
        <% } %>
      </ul>
    </div>
  </div>
</div>
