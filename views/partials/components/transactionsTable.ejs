<div class="flex flex-col">
  <div class="overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 inline-block min-w-full sm:px-6 lg:px-8">
      <div class="overflow-hidden">
        <table class="min-w-full border-2 border-gray-300">
          <thead class="border-b bg-gray-300">
            <tr>
              <th
                scope="col"
                class="text-lg font-medium text-gray-500 px-6 py-4 text-left font-bold"
              >
                Name
              </th>
              <th
                scope="col"
                class="text-lg font-medium text-gray-500 px-6 py-4 text-left font-bold"
              >
                Symbol
              </th>
              <th
                scope="col"
                class="text-lg font-medium text-gray-500 px-6 py-4 text-left font-bold"
              >
                Type
              </th>
              <th
                scope="col"
                class="text-lg font-medium text-gray-500 px-6 py-4 text-left font-bold"
              >
                Price
              </th>
              <th
                scope="col"
                class="text-lg font-medium text-gray-500 px-6 py-4 text-left font-bold"
              >
                Quantity
              </th>
              <th
                scope="col"
                class="text-lg font-medium text-gray-500 px-6 py-4 text-left font-bold"
              >
                Date
              </th>
              <th
                scope="col"
                class="text-lg font-medium text-gray-500 px-6 py-4 text-left font-bold"
                colspan="2"
              >
                Action
              </th>
            </tr>
          </thead>
          <tbody>
            <% transactions.forEach(({_id, name, tickerSymbol, type, stockPrice,
            quantity,date, logo}) => { %>
            <tr
              class="border-b <%= type === 'Buy' ? 'bg-green-100' : 'bg-red-300' %>"
            >
              <td
                class="text-sm text-black font-bold px-6 py-4 whitespace-nowrap"
              >
                <%= name%>
              </td>
              <td
                class="text-sm text-black font-bold px-6 py-4 whitespace-nowrap"
              >
                <%= tickerSymbol%>
              </td>
              <td
                class="text-sm text-black font-bold px-6 py-4 whitespace-nowrap"
              >
                <%= type%>
              </td>
              <td
                class="text-sm text-black font-bold px-6 py-4 whitespace-nowrap"
              >
                $<%= stockPrice%>
              </td>
              <td
                class="text-sm text-black font-bold px-6 py-4 whitespace-nowrap"
              >
                <%= quantity%>
              </td>
              <td
                class="text-sm text-black font-bold px-6 py-4 whitespace-nowrap"
              >
                <%= date.toLocaleDateString()%>
              </td>

              <td
                class="text-sm text-gray-900 font-bold px-6 py-4 whitespace-nowrap flex gap-x-4"
              >
                <a href="transactions/edit/<%= _id %>"
                  ><button
                    class="bg-blue-500 hover:bg-blue-400 text-white font-bold py-2 px-4 border-b-4 border-blue-700 hover:border-blue-500 rounded cursor-pointer"
                  >
                    Update
                  </button></a
                >
                <form
                  action="transactions/<%= _id %>?_method=DELETE"
                  method="POST"
                >
                  <input
                    class="bg-red-500 hover:bg-red-400 text-white font-bold py-2 px-4 border-b-4 border-red-700 hover:border-red-500 rounded cursor-pointer"
                    type="submit"
                    value="Delete"
                  />
                </form>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
